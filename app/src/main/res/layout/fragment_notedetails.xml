<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="details"
            type="com.example.notesapp.viewmodels.NoteDetailsViewModel" />

        <variable
            name="notes"
            type="com.example.notesapp.entities.Note" />

        <import type="android.view.View"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/navigation_bottom_height" />


        <EditText
            android:id="@+id/item_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/headingHint"
            android:textSize="@dimen/edit_editText_note_heading"
            android:background="@color/white"
            android:padding="5dp"
            app:EditTitleSetter="@{details.note}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/note_heading_test3" />


        <EditText
            android:id="@+id/item_details"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="start"
            android:padding="5dp"
            android:hint="@string/detailsHint"
            android:textSize="@dimen/edit_editText_note_details"
            android:background="@color/white"
            app:EditDetailsSetter="@{details.note}"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout_timetable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_heading"
            tools:text="@string/note_details_test2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_timetable"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@color/secondaryColor"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/timetable"
                android:layout_width="41dp"
                android:layout_height="37dp"
                android:contentDescription="@string/datetime"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_timetable" />

            <TextView
                android:id="@+id/time_when_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="@string/time_when_label"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/note_item_details_size"
                app:layout_constraintEnd_toStartOf="@+id/timetable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/timetable" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/note_item_details_size"
                app:TimeSetter="@{details.note}"
                app:layout_constraintEnd_toEndOf="@+id/time_when_label"
                app:layout_constraintStart_toStartOf="@+id/time_when_label"
                app:layout_constraintTop_toBottomOf="@+id/time_when_label"
                tools:text="@string/note_time_created_test" />

            <TextView
                android:id="@+id/date_when_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_when_label"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/note_item_details_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/timetable"
                app:layout_constraintTop_toTopOf="@+id/timetable" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/note_item_details_size"
                app:DateSetter="@{details.note}"
                app:layout_constraintEnd_toEndOf="@+id/date_when_label"
                app:layout_constraintStart_toStartOf="@+id/date_when_label"
                app:layout_constraintTop_toBottomOf="@+id/date_when_label"
                tools:text="@string/note_date_created_test" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="150dp"
            android:layout_marginEnd="30dp"
            android:contentDescription="@string/fab_content_desc"
            android:visibility="@{details.hasDetailsTextChanged || details.hasHeadingTextChanged ? View.VISIBLE : View.INVISIBLE}"
            app:srcCompat="@drawable/ic_baseline_save_24"/>
    </FrameLayout>
</layout>