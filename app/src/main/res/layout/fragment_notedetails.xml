<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="details"
            type="com.example.notesapp.viewmodels.NoteDetailsViewModel" />

        <variable
            name="notes"
            type="com.example.notesapp.entities.Note" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="@color/cardText"
            android:textSize="@dimen/note_item_heading_size"
            app:TitleSetter="@{details.note}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Just a random heading really" />

        <TextView
            android:id="@+id/itemDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="55dp"

            android:layout_marginEnd="8dp"
            android:textColor="@color/cardText"
            android:textSize="@dimen/note_item_details_size"
            app:DetailsSetter="@{details.note}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemHeading"
            tools:text="This is some ra testing purposes only so please have some understanding otherwise I will be pissed of" />

        <TextView
            android:id="@+id/itemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardText"
            android:textSize="@dimen/note_item_details_size"
            android:layout_marginTop="80dp"
            app:DateSetter="@{details.note}"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDetails"
            tools:text="27.11.1991" />

        <TextView
            android:id="@+id/itemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="@color/cardText"
            android:textSize="@dimen/note_item_details_size"
            app:TimeSetter="@{details.note}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/itemDetails"
            tools:text="12:12" />

        <TextView
            android:id="@+id/date_when_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/date_when_label"
            android:textColor="@color/cardText"
            android:textSize="@dimen/note_item_details_size"
            app:layout_constraintBottom_toTopOf="@+id/itemDate"
            app:layout_constraintEnd_toEndOf="@+id/itemDate"
            app:layout_constraintStart_toStartOf="@+id/itemDate" />

        <TextView
            android:id="@+id/time_when_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardText"
            android:textSize="@dimen/note_item_details_size"
            android:layout_marginBottom="8dp"
            android:text="@string/time_when_label"
            app:layout_constraintBottom_toTopOf="@+id/itemTime"
            app:layout_constraintEnd_toEndOf="@+id/itemTime"
            app:layout_constraintStart_toStartOf="@+id/itemTime" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="202dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>